<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/auth_bg"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/logo_info">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/app_icon"
            android:layout_gravity="center_horizontal"
            android:id="@+id/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:text="@string/app_name"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:fontFamily="@font/mercy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:text="Welcomes you"
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:fontFamily="@font/mercy"/>

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fields"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/logo_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="40dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username_input"
                android:hint="@string/username">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/vector_account_avatar"
                    android:drawablePadding="8dp"
                    android:inputType="text"
                    android:id="@+id/username"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/email_input"
                android:hint="@string/email">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:drawableLeft="@drawable/vector_email"
                    android:drawablePadding="8dp"
                    android:inputType="textEmailAddress"
                    android:id="@+id/mail"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fields"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-25dp"
        android:background="@drawable/auth_btn_shape"
        android:text="Sign Up"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:textColor="@color/color_white"
        android:id="@+id/register"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/register">

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/facebook"
            android:layout_margin="16dp"/>

        <View
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/google_plus"
            android:layout_margin="16dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_white"
        android:layout_alignParentBottom="true"
        android:text="Already have a member? Sign in"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>