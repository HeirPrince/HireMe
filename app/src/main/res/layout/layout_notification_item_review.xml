<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <com.ramotion.foldingcell.FoldingCell
            android:id="@+id/folding_cell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="true"
            android:clipToPadding="true"
            folding-cell:animationDuration="100"
            folding-cell:backSideColor="@color/lighter_grey"
            folding-cell:additionalFlipsCount="0"
            folding-cell:cameraHeight="140">

            <FrameLayout
                android:id="@+id/cell_content_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lighter_grey"
                android:visibility="gone">

                <include layout="@layout/layout_reply_review"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/cell_title_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:id="@+id/user_image1"
                        android:src="@drawable/job_search"/>

                    <TextView
                        android:id="@+id/notification_content1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prince added a Review"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:layout_toEndOf="@id/user_image1"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="24dp"/>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/notification_content"
                        android:orientation="horizontal"
                        android:id="@+id/chrono">


                        <View
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/vector_time"
                            android:backgroundTint="@color/colorAccent" />


                        <TextView
                            android:id="@+id/time1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="4dp"
                            android:text="11:05 PM" />

                    </LinearLayout>

                </RelativeLayout>

            </FrameLayout>

            â€‹
        </com.ramotion.foldingcell.FoldingCell>

    </RelativeLayout>


</RelativeLayout>